<% layout('../shared/layouts/admin') -%>
<% block('title', "Add new products page") -%>

<% script('/js/modules/add-products-module.js') -%>

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Add new products</h1>
    <div class="input-group-append">
        <button class="btn btn-primary product-save" type="submit" id="button-addon2">Save</button>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="input-group mb-3">
            <input type="text" class="form-control" id="product" placeholder="title of the product"
                aria-label="Recipient's username" aria-describedby="button-addon2">
        </div>
        <div class="input-group mb-3">
            <input type="text" class="form-control" id="description" placeholder="product description"
                aria-label="Recipient's username" aria-describedby="button-addon2">
        </div>
        <div class="input-group mb-3">
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="imageURLProduct">
                <label class="custom-file-label" for="customFile">Choose file</label>
              </div>
            <div class="input-group-prepend">
            </div>
        </div>
        <div>
            <img id="imagePreview" class="img-fluid d-none" alt="Responsive image">
        </div>
        <div class="form-group my-3">
            <select class="custom-select" id="categoryTitle">
                <option selected disabled>Choose category</option>
                <% categories.forEach(function(category) { %>
                <option value="<%= category._id %>"><%= category.title %></option>
                <% }); %>
            </select>
        </div>
        <div class="form-group my-3">
            <select class="custom-select d-none" id="subcategoryTitle"></select>
        </div>
    </div>
</div>
