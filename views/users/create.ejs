<% layout('../shared/layouts/admin') -%>
<% block('title', "Add new admin") -%>

<% script('/js/modules/add-admin-module.js') -%>

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800">Add new admin</h1>
  <a id="submit" href="#" class="btn btn-primary my-3">Register</a>
</div>
<div class="card shadow mb-4">
  <div class="card-body">
    <form id="addUser" action="add" method="POST">
      <div class="form-group">
        <label for="username">Email address<span class="text-coral">*</span></label>
        <input type="email" name="username" id="username" class="form-control" aria-describedby="emailHelp"
          placeholder="name@example.com">
      </div>
      <div class="form-group">
        <label for="password">Password<span class="text-coral">*</span></label>
        <input type="password" name="password" class="form-control" id="exampleInputPassword" required>
      </div>
      <div class="form-group">
        <label for="repeatPassword">Confirm Password<span class="text-coral">*</span></label>
        <input type="password" name="confirmPassword" class="form-control" id="exampleRepeatPassword" required>
      </div>
    </form>
  </div>
</div>