<% layout('../shared/layouts/admin') -%>
<% block('title', "Add new admin") -%>

<% script('/js/modules/add-admin-module.js') -%>

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800">Add new admin</h1>
  <a id="submit" href="#" class="btn btn-primary my-3 admin-save">Register</a>
</div>
<div class="card shadow mb-4">
  <div class="card-body">
      <div class="form-group">
        <input type="email" id="username" class="form-control" aria-describedby="emailHelp"
          placeholder="name@example.com">
      </div>
      <div class="form-group">
        <input type="password" placeholder="password" class="form-control" id="exampleInputPassword" required>
      </div>
      <div class="form-group">
        <input type="password" placeholder="confirm password" class="form-control" id="exampleRepeatPassword" required>
      </div>
  </div>
</div>