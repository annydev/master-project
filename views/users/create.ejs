<% layout('../shared/layouts/admin') -%>
<% block('title', "Add new admin") -%>

<% script('/js/modules/add-admin-module.js') -%>

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800">Add new admin</h1>
</div>
<form action="/admin/addAdmin" method="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input type="email" name="username" class="form-control" id="exampleInputEmail" aria-describedby="emailHelp"
      placeholder="name@example.com">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" name="password" class="form-control" id="exampleInputPassword" required>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Confirm Password</label>
    <input type="password" name="confirmPassword" class="form-control" id="exampleRepeatPassword" required>
  </div>
  <button id="submit" type="submit" class="btn btn-primary" name="button">Register</button>
</form>