<% layout('../shared/layouts/admin') -%>
<% block('title', "Shops page") -%>

<% script('/js/modules/shops-module.js') -%>

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800">Shops page</h1>
  <a href="shops/add" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
      class="fas fa-plus fa-sm text-white-50"></i> Add new</a>
</div>
<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Shops Table</h6>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>Name</th>
            <th style="width: 1px;"></th>
          </tr>
        </thead>
        <tbody>
          <% shops.forEach(function(shop) { %>
          <tr class="category">
            <td><%= shop.title %> </td>
            <td>
              <div class="btn-group" role="group" aria-label="Basic example">
                <a href="/admin/shops/edit/<%= shop._id %>" class="edit btn btn-success btn-sm">
                  <i class="fas fa-edit"></i></a>
                <button class="del btn btn-danger btn-sm" data-id="<%= shop._id %>">
                  <i class="fas fa-trash"></i>
                </button>
              </div>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>